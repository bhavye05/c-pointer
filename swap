#include <iostream>
using namespace std;

// Function to swap values using pointers
void swap(int* a, int* b) {
    int temp = *a;
    *a = *b;
    *b = temp;
}

int main() {
    int x = 5, y = 10;

    cout << "Before swap: x = " << x << ", y = " << y << endl;

    // Call swap function using addresses
    swap(&x, &y);

    cout << "After swap:  x = " << x << ", y = " << y << endl;

    return 0;
}
