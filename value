#include <iostream>
using namespace std;

int main() {
    int x = 10;      // Variable
    int* ptr = &x;   // Pointer storing address of x

    cout << "Value of the variable x: " << x << endl;
    cout << "Address of the variable x: " << &x << endl;
    cout << "Value stored in the pointer ptr: " << ptr << endl;

    return 0;
}
