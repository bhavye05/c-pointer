#include <iostream>
using namespace std;

// Function definition
int square(int x) {
    return x * x;
}

int main() {
    int num = 5;

    // Normal function call
    cout << "Normal call: square(" << num << ") = "
         << square(num) << endl;

    // Function pointer declaration and assignment
    int (*funcPtr)(int) = square;

    // Function call using function pointer
    cout << "Function pointer call: square(" << num << ") = "
         << funcPtr(num) << endl;

    return 0;
}
